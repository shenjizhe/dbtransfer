<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ninehcom.transfer.mapper.CoachTypeMapper">
    <resultMap type="com.ninehcom.transfer.entity.CoachType" id="coachTypeMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>
    <select id="selectAllCoachType" resultMap="coachTypeMap">
        	SELECT
        	*
        	FROM
        	coach_type
    </select>
    <select id="selectCoachTypeById" resultMap="coachTypeMap">
        	SELECT
        	*
        	FROM
        	coach_type
        	WHERE
        	ID=#{0}
    </select>
    <insert id="insertCoachType" parameterType="coachType">
        	INSERT INTO
        	coach_type
        	(
        	coach_type.id , coach_type.name
        	)
        	VALUES
        	(
        	#{ id } , #{ name }
        	)
    </insert>
    <update id="updateCoachType" parameterType="coachType">
        	UPDATE
        	coach_type
        	SET
        	<if test="name != null">
        	coach_type.Name = #{ name }
        	</if>
        	WHERE
        	id= #{id}
    </update>
    <delete id="deleteCoachTypeById">
        	DELETE FROM
        	coach_type
        	WHERE
        	id=#{0}
    </delete>
</mapper>

