<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ninehcom.transfer.mapper.UpdownTypeMapper">
    <resultMap type="com.ninehcom.transfer.entity.UpdownType" id="updownTypeMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>
    <select id="selectAllUpdownType" resultMap="updownTypeMap">
        	SELECT
        	*
        	FROM
        	updown_type
    </select>
    <select id="selectUpdownTypeById" resultMap="updownTypeMap">
        	SELECT
        	*
        	FROM
        	updown_type
        	WHERE
        	ID=#{0}
    </select>
    <insert id="insertUpdownType" parameterType="updownType">
        	INSERT INTO
        	updown_type
        	(
        	updown_type.id , updown_type.name
        	)
        	VALUES
        	(
        	#{ id } , #{ name }
        	)
    </insert>
    <update id="updateUpdownType" parameterType="updownType">
        	UPDATE
        	updown_type
        	SET
        	<if test="name != null">
        	updown_type.Name = #{ name }
        	</if>
        	WHERE
        	id= #{id}
    </update>
    <delete id="deleteUpdownTypeById">
        	DELETE FROM
        	updown_type
        	WHERE
        	id=#{0}
    </delete>
</mapper>

