<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ninehcom.transfer.mapper.PlayerPositionTypeMapper">
    <resultMap type="com.ninehcom.transfer.entity.PlayerPositionType" id="playerPositionTypeMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>
    <select id="selectAllPlayerPositionType" resultMap="playerPositionTypeMap">
        	SELECT
        	*
        	FROM
        	player_position_type
    </select>
    <select id="selectPlayerPositionTypeById" resultMap="playerPositionTypeMap">
        	SELECT
        	*
        	FROM
        	player_position_type
        	WHERE
        	ID=#{0}
    </select>
    <insert id="insertPlayerPositionType" parameterType="playerPositionType">
        	INSERT INTO
        	player_position_type
        	(
        	player_position_type.id , player_position_type.name
        	)
        	VALUES
        	(
        	#{ id } , #{ name }
        	)
    </insert>
    <update id="updatePlayerPositionType" parameterType="playerPositionType">
        	UPDATE
        	player_position_type
        	SET
        	<if test="name != null">
        	player_position_type.Name = #{ name }
        	</if>
        	WHERE
        	id= #{id}
    </update>
    <delete id="deletePlayerPositionTypeById">
        	DELETE FROM
        	player_position_type
        	WHERE
        	id=#{0}
    </delete>
</mapper>

