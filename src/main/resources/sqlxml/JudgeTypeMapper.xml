<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ninehcom.transfer.mapper.JudgeTypeMapper">
    <resultMap type="com.ninehcom.transfer.entity.JudgeType" id="judgeTypeMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>
    <select id="selectAllJudgeType" resultMap="judgeTypeMap">
        	SELECT
        	*
        	FROM
        	judge_type
    </select>
    <select id="selectJudgeTypeById" resultMap="judgeTypeMap">
        	SELECT
        	*
        	FROM
        	judge_type
        	WHERE
        	ID=#{0}
    </select>
    <insert id="insertJudgeType" parameterType="judgeType">
        	INSERT INTO
        	judge_type
        	(
        	judge_type.id , judge_type.name
        	)
        	VALUES
        	(
        	#{ id } , #{ name }
        	)
    </insert>
    <update id="updateJudgeType" parameterType="judgeType">
        	UPDATE
        	judge_type
        	SET
        	<if test="name != null">
        	judge_type.Name = #{ name }
        	</if>
        	WHERE
        	id= #{id}
    </update>
    <delete id="deleteJudgeTypeById">
        	DELETE FROM
        	judge_type
        	WHERE
        	id=#{0}
    </delete>
</mapper>

